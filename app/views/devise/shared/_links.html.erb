<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), :style => "color: grey" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'enregistrer", new_registration_path(resource_name), :style => "color: grey" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié", new_password_path(resource_name), :style => "color: grey" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "E-mail de confirmation non reçu ?", new_confirmation_path(resource_name), :style => "color: grey" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Instructions pour réinitialiser le mot de passe non reçues ?", new_unlock_path(resource_name), :style => "color: grey" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :style => "color: grey" %><br />
  <% end -%>
<% end -%>
